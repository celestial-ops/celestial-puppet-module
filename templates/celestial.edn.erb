; see http://celestial-ops.com/posts/configuration.html
{
 :celestial {
   :port 8082
   :https-port 8443
   :log {
     :level <%= @log['level'] %>
     :path "<%= @log['path'] %>"
     <% if(@log['gelf']!= nil) %>
     :gelf {
        :host "<%= @log['gelf']['host'] %>"
        :type :kibana
      }
     <% end %>
   }

   :cert {
     :password "<%= @cert_password %>"
     :keystore "<%= @cert_keystore %>"
   }
  }

  :job {
    :reset-on <%= @reset_on %>
    ;;    :expiry 30
    ;;    :wait-time 5
   }


 :hypervisor {
   <% @envs.each do |e, hyps| %>
   :<%= e %> {
     <% hyps.each do |h, p| -%>
       <% if(h.eql?('physical')) %>
    :physical { }
       <% elsif(h.eql?('proxmox')) %>
    :proxmox{
    }
       <% end -%>
   <% end %>
   }
  <% end %>
  }
  
 :redis {
   :host "localhost"
 } 

 :elasticsearch {
   :path.data "/var/lib/es/data/"
   :path.work "/var/lib/es/work/"
 }

 :ssh {
   :private-key-path "/root/.ssh/id_rsa_celestial"
 }

